    <!-- inicio do js -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/qs/6.5.1/qs.min.js"></script>
    <script src="http://code.jquery.com/jquery-1.8.2.js"></script>
    <script src="http://code.jquery.com/ui/1.9.0/jquery-ui.js"></script>
    <script src="Javascript/requisiscaoVagaSubmit.js"></script>
    <script src="Javascript/inputsDatepicker.js"></script>
    <script type="text/javascript">


        $("[data-previous]").hide();
        $(".submit").hide();
        $(".second-block").hide();
        $(".third-block").hide();
        $(".four-block").hide();

        let page = 1;

        $("[data-next]").click(function () {
            if (page === 1) {
                $(".second-block").show();
                $(".first-block").hide();
                $("[data-previous]").show();
                page++;
            } else if (page === 2) {
                $(".third-block").show();
                $(".second-block").hide();
                page++;
            } else if (page === 3) {
                $(".four-block").show();
                $(".third-block").hide();
                $(".submit").show();
                $("[data-next]").hide();
                page++;
            }
        });

        $("[data-previous]").click(function () {
            if (page === 2) {
                $("[data-previous]").hide();
                $(".first-block").show();
                $(".second-block").hide();
                page--;
            } else if (page === 3) {
                $(".second-block").show();
                $(".third-block").hide();
                page--;
            } else if (page === 4) {
                $(".third-block").show();
                $(".four-block").hide();
                $("[data-next]").show();
                $(".submit").hide();
                page--;
            }
        });

    </script>
